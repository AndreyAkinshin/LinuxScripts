# Variables
export LC_ALL=C.UTF-8
export LANG=C.UTF-8

# Functions
extract() {
  if [ -f $1 ] ; then
    case $1 in
      *.tar.bz2)   tar xvjf $1    ;;
      *.tar.gz)    tar xvzf $1    ;;
      *.bz2)       bunzip2 $1     ;;
      *.rar)       unrar x $1     ;;
      *.gz)        gunzip $1      ;;
      *.tar)       tar xvf $1     ;;
      *.tbz2)      tar xvjf $1    ;;
      *.tgz)       tar xvzf $1    ;;
      *.zip)       unzip $1       ;;
      *.Z)         uncompress $1  ;;
      *.7z)        7z x $1        ;;
      *)           echo "don't know how to extract '$1'..." ;;
    esac
  else
    echo "'$1' is not a valid file!"
  fi
}
up() {
  local d=""
  limit=$1
  for ((i=1 ; i <= limit ; i++))
    do
      d=$d/..
    done
  d=$(echo $d | sed 's/^\///')
  if [ -z "$d" ]; then
    d=..
  fi
  cd $d
}
dsh() {
  sed "s/\r$//" $1 | sh -x 2>&1 | tee log.txt | grep -E "^[+].*|$"
}

# Aliases
git config --global alias.lg "log --graph --date-order --pretty=format:'%C(bold blue)%h%C(reset) %C(bold green)[%an]%C(reset) %Cgreen%d%Creset %s, %C(yellow)%ad%C(reset)' --date=short"